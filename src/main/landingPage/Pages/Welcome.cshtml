@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LandingPage.Pages.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p> A Service Principal have been created in your Azure AD Tenant with this tenant id: <b>@Model.TenantId</b></p>

    <p></p>

    <form method="post">
        <div>    
            <input type="submit"
                   value="Sign up"
                   class="btn btn-primary"
                   asp-page-handler="AppRoleAssignment"/>
        </div>
    </form>

</div>